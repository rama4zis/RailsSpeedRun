<table class="table table-dark table-striped my-5 text-center">
    <thead>
        <tr>
            <th scope="col">No</th>
            <th scope="col">Tanggal</th>
            <th scope="col">Semester</th>
            <th scope="col">Kode Mapel</th>
            <th scope="col">Jenis</th>
            <th scope="col">Nilai</th>
        </tr>
    </thead>
    <tbody>
        <% @evaluations.each_with_index do |evaluation, index| %>
        <tr>
            <th scope="row"><%= index+1 %></th>
            <td><%= evaluation.date %></td>
            <td><%= evaluation.semester %></td>
            <td><%= evaluation.mapel_code %></td>
            <td><%= evaluation.jenis %></td>
            <td><%= evaluation.nilai %></td>
        </tr>
        <% end %>
    </tbody>
</table>