<div class="col-md-5 mx-auto my-5 d-flex flex-column">
    <div class="d-flex justify-content-center">
        <div class="profile-image-wrap ">
            <img src="/user_images/default.jpg" alt="" class="img-thumbnail">
        </div>
    </div>
    <h2 class="text-center my-1">
        <%= @current_user.username %>
    </h2>

    <div class="scores mt-5 text-center">
        <h4>
            Grade
        </h4>
        <h2>
            A
        </h2>
    </div>
</div>

<% if flash[:success] %>
<div class="alert alert-success" role="alert">
    <%= flash[:success] %>
</div>
<% end %>

<table class="table table-dark table-striped my-5 text-center">
    <thead>
        <tr>
            <th scope="col">No</th>
            <th scope="col">Tanggal</th>
            <th scope="col">Semester</th>
            <th scope="col">Kode Mapel</th>
            <th scope="col">Jenis</th>
            <th scope="col">Nilai</th>
            <th scope="col">Options</th>
        </tr>
    </thead>
    <tbody>
        <% @evaluations.each_with_index do |evaluation, index| %>
        <tr>
            <th scope="row"><%= index+1 %></th>
            <td><%= evaluation.date %></td>
            <td><%= evaluation.semester %></td>
            <td><%= evaluation.mapel_code %></td>
            <td><%= evaluation.jenis %></td>
            <td><%= evaluation.nilai %></td>
            <td>
                <div class="btn-group" role="group">
                    <%= link_to 'EDIT', edit_nilai_path(id: evaluation.id), class: 'btn btn-secondary' %>
                    <%= button_to 'Delete', delete_nilai_path(id: evaluation.id), method: "post", class: 'btn btn-danger' %>
                </div>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<style>
    .profile-image-wrap {

        width: 150px;
        height: 150px;
        background-color: #f5f5f5;
        border: #f5f5f5 solid 5px;
        border-radius: 100%;
        overflow: hidden;
    }
</style>